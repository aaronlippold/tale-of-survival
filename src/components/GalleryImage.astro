---
import { Image } from "astro:assets";

interface Props {
  url: ImageMetadata;
  alt: string;
}

const { url, alt } = Astro.props;
---

<figure class="relative w-full h-full flex items-center justify-center p-2">
  <div
    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"
  >
  </div>
  <Image
    src={url}
    alt={alt}
    width={1280}
    height={720}
    class="max-w-full max-h-full w-auto h-auto object-contain rounded-md"
    loading="eager"
  />
  <figcaption
    class="absolute bottom-0 z-20 w-full px-2 py-1 sm:px-4 sm:py-2 text-center text-sm sm:text-base text-white bg-black/60 backdrop-blur-sm"
  >
    {alt}
  </figcaption>
</figure>
