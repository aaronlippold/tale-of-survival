---
import config from "../config.json";
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
} from "astro-navbar";

const menuItems = config.navigation.items;
---

<header
  class="flex flex-col lg:flex-row justify-between p-5 gap-3 bg-gray-800 backdrop-blur-md sticky top-0 z-50 shadow-lg"
>
  <Astronav closeOnClick>
    <div class="flex w-full lg:w-auto justify-between">
      <a href="/" class="text-lg font-bold text-white hover:text-book-yellow">
        Tale of Survival
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-6 h-6 text-white" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        {
          menuItems.map((item) => (
            <li>
              {item.children ? (
                <Dropdown class="group">
                  <button class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-white hover:text-book-yellow">
                    <span>{item.title}</span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="3"
                      stroke="currentColor"
                      class="w-3 h-3 mt-0.5 group-open:rotate-180"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                      />
                    </svg>
                  </button>
                  <DropdownItems class="relative">
                    <div class="lg:absolute bg-gray-800 top-2 right-0 w-48 border border-gray-700 shadow-lg rounded-lg p-2">
                      <ul class="flex flex-col">
                        {item.children.map((child) => (
                          <li>
                            <a
                              href={child.path}
                              target={child.external ? "_blank" : undefined}
                              rel={child.external ? "noopener" : undefined}
                              class="block px-4 py-2 text-white hover:text-book-yellow hover:bg-gray-700 rounded-md"
                            >
                              {child.title}
                            </a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </DropdownItems>
                </Dropdown>
              ) : (
                <a
                  href={item.path}
                  class="block lg:px-3 py-2 text-white hover:text-book-yellow"
                >
                  {item.title}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </MenuItems>
  </Astronav>
</header>

<style>
  [astro-icon] {
    @apply w-5 h-5;
  }
</style>
