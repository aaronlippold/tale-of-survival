---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={`bg-gray-800 text-white py-4 px-4 ${className}`}>
  <div class="max-w-screen-xl mx-auto flex items-center justify-between">
    <h1 class="text-2xl md:text-3xl font-bold">Tale of Survival</h1>
    <nav>
      <ul class="flex items-center gap-6">
        <li>
          <a
            href="/"
            class="text-white/80 hover:text-book-yellow transition duration-300"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/boat-gallery"
            class="text-white/80 hover:text-book-yellow transition duration-300"
            >Boat Gallery</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
