---
interface Props {
  title: string;
  author: string;
  coverImage: string;
}

const { title, author, coverImage } = Astro.props;
---

<div
  class="mx-auto flex items-center justify-center"
  style="perspective: 600px;"
>
  <div
    class="relative h-[480px] w-[300px] -rotate-y-30 transition-transform duration-1000 hover:rotate-y-0 [transform-style:preserve-3d]"
  >
    {/* Front Cover */}
    <div
      class="absolute inset-0 h-[480px] w-[300px] overflow-hidden rounded-r-sm bg-[#f8f8f8] shadow-lg [transform:translateZ(25px)]"
    >
      <img
        src={coverImage}
        alt={`${title} book cover`}
        class="h-full w-full object-cover"
      />
      <div class="absolute bottom-0 left-0 right-0 bg-black/70 p-4 text-white">
        <h2 class="mb-2 text-2xl font-semibold">{title}</h2>
        <p class="text-base opacity-80">{author}</p>
      </div>
    </div>

    {/* Spine */}
    <div
      class="absolute left-0 top-[3px] h-[476px] w-12 bg-gradient-to-r from-white via-[#f9f9f9] to-white [transform:translateX(272px)_rotateY(90deg)]"
      aria-hidden="true"
    >
    </div>

    {/* Back Cover */}
    <div
      class="absolute inset-0 h-[480px] w-[300px] rounded-r-sm bg-[#f8f8f8] shadow-[-10px_0_50px_10px_rgba(0,0,0,0.4)] [transform:translateZ(-25px)]"
      aria-hidden="true"
    >
    </div>
  </div>
</div>
