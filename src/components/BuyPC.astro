---
import { showCountingSell, sectionPrices } from "../config.json";
import PriceCard from "./PriceCard.astro";
---

<div class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="relative lg:grid lg:grid-cols-7 gap-8">
      {
        sectionPrices.priceLeft && (
          <div class="mx-auto max-w-md lg:mx-0 lg:max-w-none lg:col-start-1 lg:col-end-3 lg:row-start-2 lg:row-end-3">
            <div class="h-full flex flex-col rounded-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
              <PriceCard {...sectionPrices.priceLeft} position="left" />
            </div>
          </div>
        )
      }

      {
        sectionPrices.priceMain && (
          <div class="relative mt-10 max-w-lg mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-start-3 lg:col-end-6 lg:row-start-1 lg:row-end-4">
            <div class="relative z-10 rounded-lg shadow-xl transform transition duration-300 hover:scale-105">
              <PriceCard
                {...sectionPrices.priceMain}
                position="main"
                mostPopular={true}
              />
            </div>
          </div>
        )
      }

      {
        sectionPrices.priceRight && (
          <div class="mt-10 mx-auto max-w-md lg:m-0 lg:max-w-none lg:col-start-6 lg:col-end-8 lg:row-start-2 lg:row-end-3">
            <div class="h-full flex flex-col rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
              <PriceCard {...sectionPrices.priceRight} position="right" />
            </div>
          </div>
        )
      }
    </div>

    {
      showCountingSell && (
        <p class="text-center text-lg text-white/80 mt-12 font-medium animate-pulse">
          Over <span class="font-bold text-white">2,425</span> readers have
          joined the journey
        </p>
      )
    }
  </div>
</div>
